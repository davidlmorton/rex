#!/usr/bin/env bash

set -o pipefail
set -o errexit

USAGE="\
Usage: rex <subcommand>

Available subcommands are:
    inputs
    info
    process

Try 'rex <subcommand> --help' for details."
usage() {
    echo "$USAGE"
}

main() {
    SUBCOMMAND="$1"
    shift || true

    case $SUBCOMMAND in
        info|process|inputs)
            ;;
        -h|--help)
            usage
            exit 0
            ;;
        *)
            usage
            exit 1
            ;;
    esac

    SUBCOMMAND_FILE="$(which rex-$SUBCOMMAND)"
    if [ ! -e "$SUBCOMMAND_FILE" ]; then
        usage
    else
        exec "$SUBCOMMAND_FILE" "$@"
    fi
}

main "$@"
